{
    "toolcache": [
        {
            "name": "node",
            "url" : "https://raw.githubusercontent.com/actions/node-versions/main/versions-manifest.json",
            "arch": "x64",
            "platform" : "win32",
            "versions": [
                "20.*"
            ]
        }
    ],
    "powershellModules": [
        { "name": "Pester" },
        { "name": "PowerShellGet" }
    ],
    "windowsFeatures": [
        { "name": "Containers" },
        { "name": "Microsoft-Windows-Subsystem-Linux", "optionalFeature": true },
        { "name": "VirtualMachinePlatform", "optionalFeature": true },
        { "name": "Hyper-V", "includeAllSubFeatures": true },
        { "name": "Hyper-V-PowerShell" },
        { "name": "Wireless-Networking" }
    ],
    "docker": {
        "images": [
            "mcr.microsoft.com/businesscentral:ltsc2022"
        ],
        "components": {
            "docker": "27.5.1"
        }
    },
    "dotnet": {
        "versions": [
            "8.0"
        ],
        "tools": [],
        "warmup": false
    },
    "choco": {
        "common_packages": [
            { "name": "7zip.install" },
            { "name": "jq" },
            { "name": "NuGet.CommandLine" }
        ]
    },
    "node": {
        "default": "20.*"
    },
    "pwsh": {
        "version": "7.4"
    }
}
